<div class="container">

  <h3>View All Events</h3>

  <% @all_events.each do |event| %>
  <div class="card small">
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%= event.name %>
        <!-- <i class="material-icons right">more_vert</i> -->
      </span>
      <h6>
        When?
        <%= event.date %>
        <%= event.time.to_s.split(" ")[1] %></br>
      Where?
      <%= event.location %></h6>
    <p><%= link_to "View Details", event_path(event) %></p>
  </div>
  <div class="card-action">
    <%= link_to "Edit Event", edit_event_path(event) %>
    <%= link_to "Delete Event", event_path(event), method: :delete %>
  </div>

</div>
<%#= link_to "view", post_path(post) %>
<%#= link_to "edit", edit_post_path(post) %>
<%#= link_to "delete", post_path(post), method: :delete %>
<% end  %>

<h5>Total Number of events:
  <%= @all_events.count %></h5>

</div>
